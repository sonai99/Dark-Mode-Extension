{
    "name": "Darkmode.io",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Toggle dark mode on/off in your browser window :-)",
    "icons": { "16": "logo.png",
           "48": "logo.png",
          "128": "logo.png" },
    "background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Darkmode",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}